<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activities.RecordActivity"
            android:label="Record"
            android:exported="false"
            android:theme="@style/AppTheme"/>
            
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:label="Profile"
            android:exported="false"
            android:theme="@style/AppTheme"/>
            
        <activity
            android:name=".ui.activities.ChecklistActivity"
            android:label="Checklist"
            android:exported="false"
            android:theme="@style/AppTheme"/>
            
        <activity
            android:name=".ui.activities.CoachActivity"
            android:label="Coach"
            android:exported="false"
            android:theme="@style/AppTheme"/>
            
        <activity
            android:name=".ui.activities.HistoryActivity"
            android:label="History"
            android:exported="false"
            android:theme="@style/AppTheme"/>
            
        <activity
            android:name=".ai.AIChatbotActivity"
            android:label="AI Coach Chat"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"/>
            
    </application>
</manifest>