<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Row: Name and Duration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/program_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Power Development"
            android:textColor="@color/volt_green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/program_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 WEEKS"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/program_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Intensive program to build explosive power"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Bottom Row: Difficulty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/difficulty_indicator"
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="@color/warning" />

        <TextView
            android:id="@+id/program_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="INTERMEDIATE"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@color/volt_green" />

    </LinearLayout>

</LinearLayout>