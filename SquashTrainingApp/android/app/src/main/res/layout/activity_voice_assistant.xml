<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dark gradient background -->
    <View
        android:id="@+id/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/voice_assistant_background" />

    <!-- Top bar with close and settings -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_close"
            android:tint="#666666"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp" />

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"
            android:tint="#666666"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp" />

    </RelativeLayout>

    <!-- Response text area -->
    <TextView
        android:id="@+id/response_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:alpha="0" />

    <!-- Center container for voice button and waveform -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!-- Waveform view (behind button) -->
        <com.squashtrainingapp.ui.views.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <!-- Circular voice button -->
        <com.squashtrainingapp.ui.views.CircularPulseButton
            android:id="@+id/voice_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:pulseColor="#10A37F"
            app:buttonColor="#10A37F"
            app:glowColor="#13D4A3" />

    </FrameLayout>

    <!-- Status text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium" />

</RelativeLayout>