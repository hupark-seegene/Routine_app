<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    
    <!-- Voice Button -->
    <ImageButton
        android:id="@+id/voice_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/round_button_background"
        android:src="@drawable/ic_mic"
        android:tint="@color/white"
        android:elevation="6dp"
        android:contentDescription="음성 입력" />
    
    <!-- Main Content -->
    <TabHost
        android:id="@+id/record_tab_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/voice_button">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary" />
            
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                
                <!-- Exercise Tab -->
                <LinearLayout
                    android:id="@+id/exercise_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="운동 정보"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">
                        
                        <EditText
                            android:id="@+id/exercise_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="운동 이름"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">
                            
                            <EditText
                                android:id="@+id/sets_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="세트"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">
                            
                            <EditText
                                android:id="@+id/reps_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="반복"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <EditText
                            android:id="@+id/duration_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="시간 (분)"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 음성으로 입력하려면 마이크 버튼을 누르세요"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
                
                <!-- Ratings Tab -->
                <LinearLayout
                    android:id="@+id/ratings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="운동 평가"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />
                    
                    <!-- Intensity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강도"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="16dp" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <SeekBar
                            android:id="@+id/intensity_slider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="10" />
                        
                        <TextView
                            android:id="@+id/intensity_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textColor="@color/primary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                    
                    <!-- Condition -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="컨디션"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <SeekBar
                            android:id="@+id/condition_slider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="10" />
                        
                        <TextView
                            android:id="@+id/condition_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textColor="@color/primary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                    
                    <!-- Fatigue -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="피로도"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="24dp" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <SeekBar
                            android:id="@+id/fatigue_slider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="10" />
                        
                        <TextView
                            android:id="@+id/fatigue_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textColor="@color/primary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- Memo Tab -->
                <LinearLayout
                    android:id="@+id/memo_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메모"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />
                    
                    <EditText
                        android:id="@+id/memo_input"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="운동 메모를 입력하세요..."
                        android:gravity="top"
                        android:padding="12dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:inputType="textMultiLine" />
                    
                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="저장"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_button_background"
                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
    
    <!-- Voice Overlay -->
    <LinearLayout
        android:id="@+id/voice_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true">
        
        <com.squashtrainingapp.ui.widgets.VoiceWaveView
            android:id="@+id/voice_wave_view"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp" />
        
        <TextView
            android:id="@+id/voice_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="말씀해주세요..."
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예시: '3세트 기록해줘', '15회 했어', '강도 7'"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>