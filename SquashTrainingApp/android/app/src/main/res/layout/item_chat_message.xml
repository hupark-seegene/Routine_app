<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">
    
    <!-- User Message Container -->
    <LinearLayout
        android:id="@+id/user_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone">
        
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_maxWidth="280dp"
            android:layout_marginStart="48dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/accent_light">
            
            <TextView
                android:id="@+id/user_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.1" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    
    <!-- AI Message Container -->
    <LinearLayout
        android:id="@+id/ai_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:visibility="gone">
        
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_maxWidth="280dp"
            android:layout_marginEnd="48dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">
            
            <TextView
                android:id="@+id/ai_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.1" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    
</LinearLayout>